    protected List empleados;  //referencia a la clase Empleados
    protected List vehiculos;
    protected List pedidosAProv;
    protected List ofertas;
    */
    protected List clientes;
    
    /** Creates a new instance of PuntoDistribucion */
    public PVPuntoDistribucion() {
    }
    
    public PVPuntoDistribucion(int zona, String localizacion, String tfno, /*List empleados, List vehiculos, List pedidosAProv, List ofertas,*/ List clientes) {
        this.zona = zona;
        this.localizacion = localizacion;
        this.tfno = tfno;
        /*
        this.empleados = empleados;
        this.vehiculos = vehiculos;
        this.pedidosAProv = pedidosAProv;
        this.ofertas = ofertas;
        */
        this.clientes = clientes;
    }
    
    public void setZona (int zona){
        this.zona = zona;
    }
    
    public int getZona (){
        return this.zona;
    }
    
    public void setLocalizacion (String localizacion){
        this.localizacion = localizacion;
    }
    
    public String getLocalizacion (){
        return this.localizacion;
    }
    
    public void setTfno (String tfno){
        this.tfno = tfno;
    }
    
    public String getTfno (){
        return this.tfno;
    }
    /*
